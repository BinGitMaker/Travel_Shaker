{% extends 'base.html.twig' %}

{% block title %}Toutes les destinations{% endblock %}

{% block body %}
<h1 class="text-center my-5">Toutes les destinations</h1>

<div class="container">
<div class="row g-3">
{% for country in countries %}
<div class="col-12 col-md-6 col-lg-4 mb-5">
    <div class="card shadow ">
      <img src="{{ country.picture }}" class="img-fluid" />
      <a href="{{ path('country_show', {'id': country.id}) }}" class="btn btn-secondary text-uppercase stretched-link">
        <h5 class="card-title rounded-top-0">{{ country.name }}</h5>
        </a>
    </div>
</div>    
{% endfor %}
</div>
</div>
{% endblock %}