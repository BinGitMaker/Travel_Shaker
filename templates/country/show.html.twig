            <p >{{ country.hello }}</p>
            <p class="">{{ country.thanku }}</p>
            <p>{{ country.bye }}</p>
        </div>
    {# <ul>
    {% for city in country %}
    <li class="cities">{{ city.name }}</li>
    {% endfor %}
    </ul> #}
    </section>
</section>
<section class="containerBelow container">
    <div>
        {# <p>Dernière visite : {{ country.date }}</p> #}
        <p>Durée du séjour : {{ country.duration }} jours</p>
        <p>{{ country.diving }}</p>
        <p>{{ country.links }}</p>
    </div>
    <div class="bodytext">{{ country.content }}</div>
</section>

